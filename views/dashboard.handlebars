{{#each posts as |post|}}
  <div class="card text-decoration-none m-2 flex-row" style="width: 40rem;">
    <div class="card-body" id={{post.id}}>
      <div class="card-header">
        <a href="/api/post/{{post.id}}" class="card-title text-decoration-none">
          {{title}}
        </a>
        <p class="card-text user-name">Created by
          {{user.username}}
          on
          {{!-- {{format_date createdAt}} remember to implement this helper function --}}
          </p>
      </div>
      <p class="card-text">
        {{body}}
      </p>
    </div>
      <div>
        <button class="btn-alert delete-button" id={{post.id}}>🗑️</button>
      </div>
  </div>
{{/each}}
<div class="container-fluid justify-content-center m-4">
  <button
    id="newpost"
    class="btn btn-primary fixed-bottom"
    style="width: 20rem;"
  >New Post</button>
</div>
<script src="/js/scripts.js"></script>